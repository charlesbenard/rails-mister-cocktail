<div class="container">
  <h1>All cocktails</h1>
  <div class="row">
    <div class="col-sm-4">
      <%= link_to 'Add a cocktail', new_cocktail_path  %>
      <% @cocktails.each_with_index do |cocktail, index| %>
      <h4><%= index+1 %> <%= cocktail.name %></h4>
      <p><%= link_to 'details', cocktail_path(cocktail)  %></p>
      <% end %>
    </div>

  </div>
</div>


