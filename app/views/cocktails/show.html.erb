<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-sm-8">
    <%= link_to 'back', cocktails_path %>
    <%= link_to 'add a dose', new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
    <% @cocktail.doses.each_with_index do |dose, index| %>
    <p><%= index + 1 %>. <%= dose.ingredient.name %> <%= dose.description %> <%= link_to "X", cocktail_dose_path(dose), method: :delete %></p>
    <% end %>
    </div>
  </div>
</div>
